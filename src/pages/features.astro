<script>
  // Store references to event listeners for cleanup
  const cleanupFunctions: Array<() => void> = [];

  // Function to initialize all interactive features
  function initializeFeatures() {    
    // Initialize touch support for 3D cards
    initializeTouchCards();
  }
  
  // Add touch support for 3D cards
  function initializeTouchCards() {
    const cards = document.querySelectorAll('.feature-card.perspective');
    
    cards.forEach(card => {
      const cardInner = card.querySelector('.preserve-3d');
      
      if (cardInner) {
        let isFlipped = false;
        
        const handleInteraction = () => {
          // For touch devices, toggle the flipped state
          if (window.matchMedia('(hover: none)').matches) {
            isFlipped = !isFlipped;
            if (isFlipped) {
              cardInner.classList.add('flipped');
            } else {
              cardInner.classList.remove('flipped');
            }
          }
        };
        
        // Add both click and touch events for better compatibility
        cardInner.addEventListener('click', handleInteraction);
        cardInner.addEventListener('touchstart', handleInteraction);
        
        // Add cleanup function
        cleanupFunctions.push(() => {
          if (cardInner) {
            cardInner.removeEventListener('click', handleInteraction);
            cardInner.removeEventListener('touchstart', handleInteraction);
          }
        });
      }
    });
  }
</script>

  