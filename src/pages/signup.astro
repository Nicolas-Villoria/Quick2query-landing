---
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.astro';
import BackgroundGradient from '../components/BackgroundGradient.jsx';
---

<Layout title="Sign Up - Schedulink">
  <main class="min-h-screen relative">
    <!-- Background Gradient -->
    <div class="absolute inset-0 z-0">
      <BackgroundGradient />
    </div>

    <!-- Top Navigation -->
    <div class="relative z-10 flex justify-between items-center p-6 lg:p-8">
      <!-- Logo on Top Left -->
      <div class="flex items-center space-x-3">
        <a href="/" class="flex items-center space-x-3 hover:opacity-80 transition-opacity duration-200">
          <div class="w-10 h-10 bg-gradient-to-r from-blue-500 to-red-500 rounded-xl flex items-center justify-center shadow-lg">
            <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-8.707l-3-3a1 1 0 00-1.414 0l-3 3a1 1 0 001.414 1.414L9 9.414V13a1 1 0 102 0V9.414l1.293 1.293a1 1 0 001.414-1.414z" clip-rule="evenodd"></path>
            </svg>
          </div>
        
          <span class="text-2xl font-bold text-black">Schedulink</span>
        </a>
      </div>

      <!-- Sign In Message on Top Right - Hidden on mobile -->
      <div class="hidden md:flex items-center space-x-4">
        <span class="text-black font-medium">Already have an account?</span>
        <a 
          href="/signin" 
          class="px-6 py-2 bg-black text-white rounded-md hover:bg-white hover:text-black border border-black transition-all duration-200 font-medium"
        >
          Sign In
        </a>
      </div>
    </div>

    <!-- Centered Signup Card -->
    <div class="relative z-10 flex items-center justify-center min-h-[calc(100vh-120px)] px-6 pb-0">
      <div class="w-full max-w-md">
        <!-- Signup Card -->
        <div class="bg-white/90 backdrop-blur-sm rounded-2xl shadow-xl p-8 border border-gray-200 mb-12">
          <!-- Card Header -->
          <div class="text-center mb-8">
            <h2 class="text-3xl font-bold text-gray-900 mb-2">Create your account</h2>
            <p class="text-gray-600">Join thousands of medical professionals using Schedulink</p>
          </div>

          <!-- Signup Form -->
          <form class="space-y-6" action="#" method="post">
            <input type="hidden" name="account_type" id="selected-account-type" value="">

            <!-- Full Name -->
            <div>
              <label for="full-name" class="block text-sm font-semibold text-black mb-2">
                Full name<span class="text-xs text-red-500 ml-1">*</span>
              </label>
              <input 
                type="text" 
                name="full-name" 
                id="full-name"
                autocomplete="name"
                required
                class="block w-full rounded-md border-0 bg-gray-100 px-3.5 py-3 text-gray-800 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-black sm:text-sm transition-all duration-200"
                placeholder="Dr. John Smith"
              />
            </div>

            <!-- Email Field -->
            <div>
              <label for="email" class="block text-sm font-semibold text-black mb-2">
                Email address<span class="text-xs text-red-500 ml-1">*</span>
              </label>
              <input 
                type="email" 
                name="email" 
                id="email"
                autocomplete="email"
                required
                class="block w-full rounded-md border-0 bg-gray-100 px-3.5 py-3 text-gray-800 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-black sm:text-sm transition-all duration-200"
                placeholder="doctor@hospital.com"
              />
            </div>

            <!-- Practice/Organization Name (for providers) -->
            <div id="practice-field" class="hidden">
              <label for="practice-name" class="block text-sm font-semibold text-black mb-2">
                Practice/Organization name<span class="text-xs text-red-500 ml-1">*</span>
              </label>
              <input 
                type="text" 
                name="practice-name" 
                id="practice-name"
                class="block w-full rounded-md border-0 bg-gray-100 px-3.5 py-3 text-gray-800 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-black sm:text-sm transition-all duration-200"
                placeholder="City Medical Center"
              />
            </div>

            <!-- Phone Number -->
            <div>
              <label for="phone" class="block text-sm font-semibold text-black mb-2">
                Phone number<span class="text-xs text-red-500 ml-1">*</span>
              </label>
              <input 
                type="tel" 
                name="phone" 
                id="phone"
                autocomplete="tel"
                required
                class="block w-full rounded-md border-0 bg-gray-100 px-3.5 py-3 text-gray-800 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-black sm:text-sm transition-all duration-200"
                placeholder="(555) 123-4567"
              />
            </div>

            <!-- Password Field -->
            <div>
              <label for="password" class="block text-sm font-semibold text-black mb-2">
                Password<span class="text-xs text-red-500 ml-1">*</span>
              </label>
              <div class="relative">
                <input 
                  type="password" 
                  name="password" 
                  id="password"
                  autocomplete="new-password"
                  required
                  class="block w-full rounded-md border-0 bg-gray-100 px-3.5 py-3 pr-10 text-gray-800 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-black sm:text-sm transition-all duration-200"
                  placeholder="Create a strong password"
                />
                <button
                  type="button"
                  class="absolute inset-y-0 right-0 pr-3 flex items-center"
                  onclick="togglePassword()"
                >
                  <svg id="eye-open" class="h-5 w-5 text-gray-500 hover:text-gray-700 transition-colors duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                  </svg>
                  <svg id="eye-closed" class="h-5 w-5 text-gray-500 hover:text-gray-700 transition-colors duration-200 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.878 9.878L3 3m6.878 6.878L21 21"></path>
                  </svg>
                </button>
              </div>
            </div>

            <!-- Confirm Password Field -->
            <div>
              <label for="confirm-password" class="block text-sm font-semibold text-black mb-2">
                Confirm password<span class="text-xs text-red-500 ml-1">*</span>
              </label>
              <input 
                type="password" 
                name="confirm-password" 
                id="confirm-password"
                autocomplete="new-password"
                required
                class="block w-full rounded-md border-0 bg-gray-100 px-3.5 py-3 text-gray-800 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-black sm:text-sm transition-all duration-200"
                placeholder="Confirm your password"
              />
            </div>

            <!-- Terms and Privacy -->
            <div class="flex items-start">
              <input
                id="agree-terms"
                name="agree-terms"
                type="checkbox"
                required
                class="h-4 w-4 text-black focus:ring-black border-gray-300 rounded transition-colors duration-200 mt-1"
              />
              <label for="agree-terms" class="ml-3 block text-sm text-gray-700">
                I agree to the <a href="/terms" class="text-blue-600 hover:text-blue-800 underline">Terms of Service</a> and <a href="/privacy" class="text-blue-600 hover:text-blue-800 underline">Privacy Policy</a>
              </label>
            </div>

            <!-- Newsletter (optional) -->
            <div class="flex items-start">
              <input
                id="newsletter"
                name="newsletter"
                type="checkbox"
                class="h-4 w-4 text-black focus:ring-black border-gray-300 rounded transition-colors duration-200 mt-1"
              />
              <label for="newsletter" class="ml-3 block text-sm text-gray-700">
                Send me product updates and medical industry news (optional)
              </label>
            </div>

            <!-- Sign Up Button -->
            <div class="mt-8">
              <button
                type="submit"
                class="w-full rounded-md border border-black bg-black px-3.5 py-3 text-center text-sm font-semibold text-white shadow-sm hover:bg-white hover:text-black focus-visible:outline-offset-2 focus-visible:outline-black transition-all duration-200"
              >
                Create account
              </button>
            </div>

            <!-- Divider -->
            <div class="relative mt-8">
              <div class="absolute inset-0 flex items-center">
                <div class="w-full border-t border-gray-300"></div>
              </div>
              <div class="relative flex justify-center text-sm">
                <span class="px-2 bg-white text-gray-500">Or sign up with</span>
              </div>
            </div>

            <!-- Social Signup -->
            <div class="grid grid-cols-1 gap-3 mt-6">
              <button
                type="button"
                class="w-full inline-flex justify-center items-center py-2.5 px-4 border border-gray-300 rounded-md shadow-sm bg-white text-sm font-medium text-gray-500 hover:bg-gray-50 transition-colors duration-200"
              >
                <svg class="w-4 h-4 mr-2" viewBox="0 0 24 24">
                  <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                  <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                  <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                  <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                </svg>
                Google
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <!-- Mobile Sign In Section - Shown only on mobile -->
    <div class="md:hidden relative z-10 px-6 pb-8">
      <div class="text-center">
        <span class="text-black font-medium block mb-4">Already have an account?</span>
        <a 
          href="/signin" 
          class="inline-block px-6 py-2 bg-black text-white rounded-md hover:bg-white hover:text-black border border-black transition-all duration-200 font-medium"
        >
          Sign In
        </a>
      </div>
    </div>
  </main>
</Layout>

<script>
  let selectedAccountType = '';

  function selectAccountType(type: string) {
    selectedAccountType = type;
    const buttons = document.querySelectorAll('.account-type-btn');
    const practiceField = document.getElementById('practice-field');
    const selectedInput = document.getElementById('selected-account-type') as HTMLInputElement;
    
    // Reset all buttons
    buttons.forEach(btn => {
      btn.classList.remove('border-blue-500', 'bg-blue-50', 'text-blue-700');
      btn.classList.add('border-gray-300');
    });
    
    // Highlight selected button
    if (type === 'provider') {
      const providerBtn = document.getElementById('healthcare-provider');
      if (providerBtn) {
        providerBtn.classList.add('border-blue-500', 'bg-blue-50', 'text-blue-700');
        providerBtn.classList.remove('border-gray-300');
      }
      practiceField?.classList.remove('hidden');
      const practiceNameInput = document.getElementById('practice-name') as HTMLInputElement;
      practiceNameInput?.setAttribute('required', 'true');
    } else {
      const patientBtn = document.getElementById('patient');
      if (patientBtn) {
        patientBtn.classList.add('border-blue-500', 'bg-blue-50', 'text-blue-700');
        patientBtn.classList.remove('border-gray-300');
      }
      practiceField?.classList.add('hidden');
      const practiceNameInput = document.getElementById('practice-name') as HTMLInputElement;
      practiceNameInput?.removeAttribute('required');
    }
    
    if (selectedInput) {
      (selectedInput as HTMLInputElement).value = type;
    }
  }

  function togglePassword() {
    const passwordInput = document.getElementById('password') as HTMLInputElement;
    const eyeOpen = document.getElementById('eye-open');
    const eyeClosed = document.getElementById('eye-closed');
    
    if (passwordInput && eyeOpen && eyeClosed) {
      if (passwordInput.type === 'password') {
        passwordInput.type = 'text';
        eyeOpen.classList.add('hidden');
        eyeClosed.classList.remove('hidden');
      } else {
        passwordInput.type = 'password';
        eyeOpen.classList.remove('hidden');
        eyeClosed.classList.add('hidden');
      }
    }
  }

  // Form validation and submission
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.querySelector('form');
    const fullNameInput = document.getElementById('full-name') as HTMLInputElement;
    const emailInput = document.getElementById('email') as HTMLInputElement;
    const phoneInput = document.getElementById('phone') as HTMLInputElement;
    const passwordInput = document.getElementById('password') as HTMLInputElement;
    const confirmPasswordInput = document.getElementById('confirm-password') as HTMLInputElement;
    const agreeTermsInput = document.getElementById('agree-terms') as HTMLInputElement;
    
    if (form && emailInput && passwordInput) {
      form.addEventListener('submit', function(e) {
        e.preventDefault();
        
        // Check if account type is selected
        if (!selectedAccountType) {
          alert('Please select your account type (Healthcare Provider or Patient).');
          return;
        }
        
        // Basic validation
        if (!fullNameInput.value || !emailInput.value || !phoneInput.value || !passwordInput.value || !confirmPasswordInput.value) {
          alert('Please fill in all required fields.');
          return;
        }
        
        // Email validation
        const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        if (!emailRegex.test(emailInput.value)) {
          alert('Please enter a valid email address.');
          return;
        }
        
        // Password confirmation
        if (passwordInput.value !== confirmPasswordInput.value) {
          alert('Passwords do not match.');
          return;
        }
        
        // Password strength validation
        if (passwordInput.value.length < 8) {
          alert('Password must be at least 8 characters long.');
          return;
        }
        
        // Terms agreement
        if (!agreeTermsInput.checked) {
          alert('Please agree to the Terms of Service and Privacy Policy.');
          return;
        }
        
        // Practice name validation for providers
        if (selectedAccountType === 'provider') {
          const practiceNameInput = document.getElementById('practice-name') as HTMLInputElement;
          if (!practiceNameInput?.value) {
            alert('Please enter your practice or organization name.');
            return;
          }
        }
        
        // Here you would typically send the data to your registration endpoint
        console.log('Registration attempt:', {
          accountType: selectedAccountType,
          fullName: fullNameInput.value,
          email: emailInput.value,
          phone: phoneInput.value,
          password: passwordInput.value
        });
        
        // For demo purposes, show success message
        alert('Account created successfully! Please check your email for verification.');
        
        // In a real app, you would redirect to email verification or dashboard
        // window.location.href = '/verify-email';
      });
    }
  });
</script>

<style>
  /* Custom focus styles */
  input:focus, button:focus {
    box-shadow: 0 0 0 3px rgba(0, 0, 0, 0.1);
  }
  
  /* Smooth transitions */
  button, input, a {
    transition: all 0.2s ease-in-out;
  }
  
  /* Account type button selected state */
  .account-type-btn.selected {
    border-color: #3b82f6;
    background-color: #eff6ff;
    color: #1d4ed8;
  }
  
  /* Mobile optimizations */
  @media (max-width: 640px) {
    .min-h-\[calc$$100vh-120px$$\] {
      min-height: calc(100vh - 100px);
    }
    
    /* Adjust card padding on mobile */
    .bg-white\/90 {
      padding: 1.5rem;
    }
    
    /* Stack navigation properly on mobile */
    .flex.justify-between {
      flex-direction: column;
      gap: 1rem;
      align-items: flex-start;
    }
    
    @media (max-width: 480px) {
      .flex.justify-between {
        align-items: center;
      }
      
      .flex.justify-between > div:last-child {
        flex-direction: column;
        gap: 0.5rem;
        text-align: center;
      }
    }
  }
  
  /* Form field animations */
  .form-field {
    animation: slideInUp 0.3s ease-out;
  }
  
  @keyframes slideInUp {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
