---
// Hero section component
---

<section class="relative min-h-screen flex items-center justify-center overflow-hidden bg-gradient-to-br from-gray-50 to-white">
  <!-- Pulse Background Animation -->
  <div class="absolute inset-0 flex items-center justify-center">
    <div class="pulse-container">
      <div class="pulse pulse-1"></div>
      <div class="pulse pulse-2"></div>
      <div class="pulse pulse-3"></div>
      <div class="pulse pulse-4"></div>
    </div>
  </div>

  <div class="container mx-auto px-6 py-20 relative z-10">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <!-- Left Content -->
      <div class="text-center lg:text-left">
        <h1 class="text-5xl lg:text-6xl font-bold text-gray-900 mb-6 leading-tight">
          Keep your team in
          <span class="bg-gradient-to-r from-blue-600 to-red-600 bg-clip-text text-transparent">
            Rhythm
          </span>
        </h1>
        <p class="text-xl text-gray-600 mb-8 leading-relaxed">
          Reliable scheduling for medical departments, done with precision.
        </p>
        
        <!-- Pill CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start items-center">
          <button class="pill-button blue-pill group">
            <span class="pill-content">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
              Start Free Trial
            </span>
          </button>
          <button class="pill-button red-pill group">
            <span class="pill-content">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
              </svg>
              Watch Demo
            </span>
          </button>
        </div>
      </div>

      <!-- Right Content - Software Preview Placeholder -->
      <div class="flex justify-center lg:justify-end">
        <div class="bg-white rounded-2xl shadow-2xl p-8 w-full max-w-md border border-gray-100">
          <div class="space-y-4">
            <div class="flex items-center justify-between">
              <h3 class="text-lg font-semibold text-gray-900">Schedule Preview</h3>
              <div class="w-3 h-3 bg-green-400 rounded-full animate-pulse"></div>
            </div>
            <div class="space-y-3">
              <div class="h-12 bg-gradient-to-r from-blue-100 to-blue-50 rounded-lg flex items-center px-4">
                <div class="w-8 h-8 bg-blue-500 rounded-full mr-3"></div>
                <div class="flex-1">
                  <div class="h-2 bg-blue-300 rounded w-3/4 mb-1"></div>
                  <div class="h-2 bg-blue-200 rounded w-1/2"></div>
                </div>
              </div>
              <div class="h-12 bg-gradient-to-r from-red-100 to-red-50 rounded-lg flex items-center px-4">
                <div class="w-8 h-8 bg-red-500 rounded-full mr-3"></div>
                <div class="flex-1">
                  <div class="h-2 bg-red-300 rounded w-2/3 mb-1"></div>
                  <div class="h-2 bg-red-200 rounded w-1/3"></div>
                </div>
              </div>
              <div class="h-12 bg-gradient-to-r from-green-100 to-green-50 rounded-lg flex items-center px-4">
                <div class="w-8 h-8 bg-green-500 rounded-full mr-3"></div>
                <div class="flex-1">
                  <div class="h-2 bg-green-300 rounded w-4/5 mb-1"></div>
                  <div class="h-2 bg-green-200 rounded w-2/5"></div>
                </div>
              </div>
            </div>
            <div class="text-center pt-4">
              <p class="text-sm text-gray-500">Coming Soon...</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
