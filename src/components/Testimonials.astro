---
// Testimonials section component
import BackgroundGradient from "./BackgroundGradient";

const testimonials = [
  {
    name: "Dr. Rachel Martinez",
    role: "Chief of Emergency Medicine",
    initials: "DR",
    color: "bg-blue-500",
    content: "Schedulink transformed our department's scheduling chaos into a well-oiled machine. The automated guard duty assignments are fair and transparent, and our staff satisfaction has increased dramatically."
  },
  {
    name: "Michael Johnson",
    role: "Nursing Director",
    initials: "MJ",
    color: "bg-red-500",
    content: "The holiday planning feature is a game-changer. We can now coordinate time off requests months in advance while ensuring we always have adequate coverage. It's eliminated so much stress."
  },
  {
    name: "Sarah Chen",
    role: "Department Administrator",
    initials: "SC",
    color: "bg-green-500",
    content: "As a department administrator, the compliance features give me peace of mind. Everything is documented, auditable, and meets our regulatory requirements. It's saved us countless hours."
  }
];
---

<section id="testimonials" class="relative isolate min-h-screen flex flex-col justify-center bg-gradient-to-b from-gray-50/80 to-white/80 dotted-bg py-24">
  <BackgroundGradient />
  <div class="container-custom">
    <div class="text-center mb-20">
      <h2 class="text-5xl lg:text-6xl font-bold text-gray-900 mb-6">Trusted by Medical Professionals</h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
        See what healthcare leaders are saying about Schedulink's impact on their departments.
      </p>
    </div>
    
    <div class="grid lg:grid-cols-3 gap-12">
      {testimonials.map((testimonial, index) => (
        <div class={`rounded-3xl ring-1 ring-gray-900/10 relative transition-all duration-300 p-8 bg-white/80 backdrop-blur-sm shadow-lg hover:shadow-xl hover:scale-105 ${
          index % 2 === 0 ? 'rotate-1' : '-rotate-1'
        } hover:rotate-0`}>
          <div class="mb-6">
            <p class="text-gray-600 text-lg leading-relaxed italic">
              "{testimonial.content}"
            </p>
          </div>
          
          <div class="flex items-center">
            <div class={`w-12 h-12 bg-gray-900 rounded-xl flex items-center justify-center mr-4 shadow-md`}>
              <span class="text-white font-bold text-lg">{testimonial.initials}</span>
            </div>
            <div>
              <div class="font-semibold text-gray-900 text-lg">{testimonial.name}</div>
              <div class="text-gray-500 font-medium text-sm">{testimonial.role}</div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
  
  <!-- Spacer to prevent pricing section from showing -->
  <div class="h-20"></div>
</section>
