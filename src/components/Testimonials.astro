---
// Testimonials section component
import BackgroundGradient from "./BackgroundGradient";

const testimonials = [
  {
    name: "Carlos Rodríguez",
    role: "Data Science Manager",
    initials: "CR",
    color: "bg-primary",
    content: "The Quick2query prototype is exactly what our team needs. Can't wait for the full launch - this will transform how our business analysts access data."
  },
  {
    name: "Ana Martínez",
    role: "CTO",
    initials: "AM",
    color: "bg-tech",
    content: "We've seen the demo and we're impressed. An API that translates natural language to SQL could reduce our development times significantly. Definitely on our waitlist."
  },
  {
    name: "Diego Sánchez",
    role: "Business Intelligence Analyst",
    initials: "DS",
    color: "bg-accent",
    content: "As a BI Analyst, I'm excited about Quick2query. The ability to query databases conversationally without writing SQL could be a game-changer for our department."
  }
];
---

<section id="testimonials" class="relative isolate min-h-screen flex flex-col justify-center bg-gradient-to-b from-neutral to-white dotted-bg py-24">
  <BackgroundGradient />
  <div class="container-custom">
    <div class="text-center mb-20">
      <h2 class="text-5xl lg:text-6xl font-bold text-indigo-950 mb-6 font-primary">Early Interest & Feedback</h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed font-secondary">
        Hear what business professionals are saying about Quick2query's potential.
      </p>
      <div class="mt-6 inline-flex items-center gap-2 px-4 py-2 rounded-full bg-tech/10 text-tech font-medium text-sm border border-tech/20">
        <span class="relative flex h-2 w-2">
          <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-tech opacity-75"></span>
          <span class="relative inline-flex rounded-full h-2 w-2 bg-tech"></span>
        </span>
        Based on Demo Feedback
      </div>
    </div>
    
    <div class="grid lg:grid-cols-3 gap-12">
      {testimonials.map((testimonial, index) => (
        <div class={`rounded-3xl ring-1 ring-gray-900/10 relative transition-all duration-300 p-8 bg-white/90 backdrop-blur-sm shadow-lg hover:shadow-xl hover:scale-105 ${
          index % 2 === 0 ? 'rotate-1' : '-rotate-1'
        } hover:rotate-0`}>
          <div class="mb-6">
            <p class="text-text text-lg leading-relaxed font-secondary">
              "{testimonial.content}"
            </p>
          </div>
          
          <div class="flex items-center">
            <div class={`w-12 h-12 bg-indigo-950 rounded-xl flex items-center justify-center mr-4 shadow-md`}>
              <span class="text-white font-bold text-lg">{testimonial.initials}</span>
            </div>
            <div>
              <div class="font-semibold text-gray-900 text-lg">{testimonial.name}</div>
              <div class="text-gray-500 font-medium text-sm">{testimonial.role}</div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
  
  <!-- Spacer to prevent pricing section from showing -->
  <div class="h-20"></div>
</section>
