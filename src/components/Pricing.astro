---
// Pricing section component
const plans = [
  {
    name: "Starter",
    description: "Perfect for small projects and testing",
    basePrice: "1.50",
    priceUnit: "per 1,000 tokens",
    includedTokens: "5,000",
    minmonth: "€19",
    features: [
      "5,000 free tokens/month",
      "€1.50 per 1K tokens after",
      "Basic natural language processing",
      "Single database connection",
      "Standard response time",
      "Community support",
      "Pay only for what you use"
    ],
    buttonText: "Start Free Trial",
    popular: false
  },
  {
    name: "Professional",
    description: "Ideal for growing teams and businesses",
    basePrice: "1.40",
    priceUnit: "per 1,000 tokens",
    includedTokens: "50,000",
    minmonth: "€99",
    features: [
      "50,000 free tokens/month",
      "€1.40 per 1K tokens after",
      "Advanced context understanding",
      "Multiple database connections",
      "Query optimization",
      "Priority support",
      "Custom integrations",
      "Usage analytics dashboard"
    ],
    buttonText: "Start Free Trial",
    popular: true
  },
  {
    name: "Enterprise",
    description: "Custom solutions for large organizations",
    basePrice: null,
    priceUnit: "custom volume pricing",
    includedTokens: "Custom",
    monthlyEstimate: "Contact Us",
    features: [
      "Custom token allocation",
      "Volume-based discounts",
      "Full context awareness",
      "Unlimited database connections",
      "Advanced security features",
      "Dedicated support team",
      "Custom deployment options",
      "SLA guarantees",
      "Flexible billing terms"
    ],
    buttonText: "Contact Sales",
    popular: false
  }
];

---

<section id="pricing" class="relative isolate bg-gradient-to-b from-white/80 to-white px-6 py-20 lg:px-8 -mt-10">
  <div class="absolute inset-x-0 -top-3 -z-10 transform-gpu overflow-hidden px-36 blur-3xl" aria-hidden="true">
    <div class="mx-auto aspect-[1155/678] w-[72.1875rem] bg-gradient-to-tr from-primary to-tech opacity-10" style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)"></div>
  </div>

  <div class="text-center mb-16">
    <span class="inline-block px-4 py-2 rounded-full bg-tech/10 text-tech font-medium text-sm mb-4 font-secondary animate-pulse">
      Coming Soon
    </span>
    <h2 class="text-3xl font-bold mb-4 text-text font-primary">Simple, Usage-Based Pricing</h2>
    <p class="text-gray-600 max-w-2xl mx-auto font-secondary mb-2">
      Pay only for what you use. Pricing based on tokens consumed per query.
    </p>
    <p class="text-sm text-gray-500 max-w-xl mx-auto font-secondary">
      Join the waitlist to get early access with exclusive launch discounts.
    </p>
  </div>

  <div class="mx-auto mt-16 grid max-w-7xl grid-cols-1 items-center gap-8 lg:grid-cols-3">
    {plans.map((plan) => (
      <div class={`rounded-3xl relative transition-all duration-300 ${
        plan.popular 
          ? 'p-8 bg-white shadow-2xl scale-105 z-10 border-2 border-tech/20' 
          : 'p-6 bg-white/80 backdrop-blur-sm shadow-lg hover:shadow-xl border border-tech/10'
      }`}>
        {plan.popular && (
          <div class="absolute -top-5 left-0 right-0 mx-auto w-fit">
            <span class="bg-gradient-to-r from-primary to-tech text-white text-sm font-semibold px-4 py-1 rounded-full font-secondary">
              Most Popular
            </span>
          </div>
        )}

        <div class="text-center mb-8">
          <h3 class={`font-primary font-bold mb-2 ${plan.popular ? 'text-2xl text-text' : 'text-xl text-text'}`}>{plan.name}</h3>
          <p class="text-gray-600 font-secondary mb-6">{plan.description}</p>
          
          {plan.basePrice ? (
            <div class="mb-2">
              <div class="flex items-baseline justify-center gap-1">
                <span class={`font-bold ${plan.popular ? 'text-4xl text-tech' : 'text-3xl text-tech'}`}>€{plan.basePrice}</span>
                <span class="text-gray-500 font-secondary text-sm">/{plan.priceUnit}</span>
              </div>
              <div class="mt-2 text-sm text-gray-500 font-secondary">
                +{plan.minmonth}/month
              </div>
            </div>
          ) : (
            <div class="font-bold text-3xl text-text mb-2">Custom Pricing</div>
          )}
        </div>

        <div class="bg-tech/5 rounded-xl p-4 mb-8">
          <div class="text-center">
            <span class="text-tech font-bold text-2xl font-primary">{plan.includedTokens}</span>
            <span class="text-gray-600 font-secondary block text-sm">Free Tokens/Month</span>
          </div>
        </div>

        <ul class="space-y-4 mb-8">
          {plan.features.map((feature) => (
            <li class="flex items-center text-gray-600 font-secondary">
              <svg class="w-5 h-5 text-primary mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              {feature}
            </li>
          ))}
        </ul>

        <a 
          href="/signup"
          class={`w-full py-3 px-6 rounded-xl transition-all duration-300 font-secondary block text-center ${
            plan.popular 
              ? 'bg-gradient-to-r from-primary to-tech text-white hover:shadow-lg hover:shadow-tech/20' 
              : 'bg-tech/10 text-tech hover:bg-tech/20'
          }`}
        >
          Join Waitlist
        </a>
      </div>
    ))}
  </div>

  <!-- Token Pricing Explanation -->
  <div class="mx-auto mt-16 max-w-4xl">
    <div class="bg-gradient-to-r from-tech/5 to-primary/5 rounded-2xl p-8 border border-tech/10">
      <div class="flex items-start gap-4">
        <div class="flex-shrink-0">
          <div class="w-12 h-12 rounded-full bg-tech/10 flex items-center justify-center">
            <svg class="w-6 h-6 text-tech" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
        </div>
        <div class="flex-1">
          <h3 class="text-lg font-bold text-gray-900 mb-2 font-primary">How Token-Based Pricing Works</h3>
          <p class="text-gray-600 mb-4 font-secondary">
            Tokens represent the computational cost of processing your natural language queries and generating SQL. 
            A typical query uses 100-500 tokens depending on complexity.
          </p>
          <div class="grid md:grid-cols-3 gap-4 text-sm">
            <div class="flex items-start gap-2">
              <svg class="w-5 h-5 text-primary flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span class="text-gray-600 font-secondary">Only pay for queries you run</span>
            </div>
            <div class="flex items-start gap-2">
              <svg class="w-5 h-5 text-primary flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span class="text-gray-600 font-secondary">No hidden fees or subscriptions</span>
            </div>
            <div class="flex items-start gap-2">
              <svg class="w-5 h-5 text-primary flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span class="text-gray-600 font-secondary">Scale up or down anytime</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
    
  
</section>
