---
// Pricing section component
const plans = [
  {
    name: "Starter",
    description: "Perfect for small departments",
    price: 29,
    features: [
      "Up to 25 staff members",
      "Basic scheduling",
      "Holiday planning",
      "Email support"
    ],
    buttonText: "Get Started Today",
    popular: true
  },
  {
    name: "Professional",
    description: "Ideal for medium departments",
    price: 79,
    features: [
      "Up to 100 staff members",
      "Advanced scheduling & AI",
      "Compliance reporting",
      "Priority support",
      "API access"
    ],
    buttonText: "Get Started Today",
    popular: false
  }
];

---

<section id="pricing" class="relative isolate bg-gradient-to-b from-white/80 to-white px-6 py-20 lg:px-8 -mt-10">
  <div class="absolute inset-x-0 -top-3 -z-10 transform-gpu overflow-hidden px-36 blur-3xl" aria-hidden="true">
    <div class="mx-auto aspect-[1155/678] w-[72.1875rem] bg-gradient-to-tr from-[#ff80b5] to-[#9089fc] opacity-30" style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)"></div>
  </div>
  <div class="mx-auto max-w-2xl text-center lg:max-w-4xl">
      <h2 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-6">Simple, Transparent Pricing</h2>
    <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
        Choose the plan that fits your department's size and needs. All plans include 24/7 support.
    </p>
  </div>
  <div class="mx-auto mt-16 grid max-w-lg grid-cols-1 items-center gap-y-6 sm:mt-20 sm:gap-y-0 lg:max-w-4xl lg:grid-cols-2">
        {plans.map((plan) => (
            <div class={`rounded-3xl ring-1 ring-gray-900/10 relative transition-all duration-300 ${
                plan.popular 
                    ? 'p-12 sm:p-14 bg-white shadow-2xl scale-105 z-10' 
                    : 'p-8 sm:p-10 bg-white/60 backdrop-blur-sm shadow-lg hover:shadow-xl'
        }`}>
                <h3 class={`font-semibold mb-2 ${plan.popular ? 'text-2xl text-gray-900' : 'text-xl text-gray-700'}`}>{plan.name}</h3>
                <p class={`mb-4 ${plan.popular ? 'text-gray-600' : 'text-gray-500'}`}>{plan.description}</p>
                <div class={`font-bold mb-6 ${plan.popular ? 'text-3xl text-gray-900' : 'text-xl text-gray-700'}`}>${plan.price}/month</div>
                <ul class={`list-disc list-inside mb-8 space-y-2 ${plan.popular ? 'text-gray-600' : 'text-gray-500'}`}>
                {plan.features.map((feature) => (
                    <li>{feature}</li>
                ))}
                </ul>
                <button class={`px-6 py-3 rounded-2xl transition-colors w-full font-semibold ${
                    plan.popular 
                        ? 'bg-gray-800 text-white hover:bg-white hover:text-gray-800 shadow-lg border border-gray-800 hover:shadow-xl' 
                        : 'bg-white text-gray-800 hover:bg-gray-800 shadow hover:shadow-lg hover:text-white border border-gray-300 hover:border-gray-800'
                }`}>
                {plan.buttonText}
                </button>
            </div>
        ))}
    </div>
    
  
</section>
