        </p>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {features.map(f => (
        <div class="feature-card p-6 bg-gray-50 rounded-lg shadow hover:shadow-md transition">
          <h3 class="text-xl font-semibold">{f.title}</h3>
          <p class="mt-2 text-gray-700">{f.description}</p>
        </div>
      ))}
