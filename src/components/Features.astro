const features = [
  {
    title: 'Natural Language to SQL',
    description: 'Our advanced AI converts natural language questions into precise SQL queries, enabling access to complex data without technical expertise.'
  },
  {
    title: 'Flexible Integration',
    description: 'Easy-to-integrate RESTful API with support for multiple databases and customizable response formats.'
  },
  {
    title: 'Advanced Security',
    description: 'Robust data protection with end-to-end encryption, granular access controls, and comprehensive query auditing.'
  },
  {
