---
import BackgroundGradient from "./BackgroundGradient";
// Call to Action section component
---

<section id="contact" class="relative isolate section-padding bg-white">
  <BackgroundGradient />
  <div class="container-custom text-center">
    <!-- Framed CTA Content -->
    <div class="max-w-6xl mx-auto bg-white/90 backdrop-blur-sm rounded-3xl ring-1 ring-tech/20 shadow-xl p-12 lg:p-16">
      <h2 class="text-4xl lg:text-7xl font-bold mb-8 font-primary bg-gradient-to-r text-indigo-950 bg-clip-text">
        Ready to Unlock Your Data's Potential?
      </h2>
      <p class="text-xl lg:text-2xl text-text mb-12 max-w-3xl mx-auto leading-relaxed font-secondary">
        Join innovative companies using Quick2query to transform their data interaction and accelerate business insights.
      </p>
      <div class="flex flex-col lg:flex-row gap-6 justify-center items-center">
        <a href="/api-playground" class="px-8 py-4 rounded-2xl transition-all duration-300 font-semibold bg-gradient-to-r from-primary to-tech text-white hover:from-tech hover:to-primary shadow-lg shadow-primary/20 hover:shadow-xl hover:shadow-tech/20 text-lg inline-flex items-center">
          <svg class="w-6 h-6 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
          </svg>
          Try API Playground
        </a>
        <a href="/contact" class="px-8 py-4 rounded-2xl transition-all duration-300 font-semibold bg-white text-tech hover:bg-tech/5 shadow hover:shadow-lg border-2 border-tech/20 hover:border-tech text-lg inline-flex items-center">
          <svg class="w-6 h-6 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
          Request Enterprise Demo
        </a>
      </div>
    </div>
  </div>
</section>
