---
// Header component with navigation
---

<header class="fixed top-2 w-full bg-auto z-50">
  <div class="flex justify-center items-center px-4 h-20 max-w-7xl mx-auto relative">

    <!-- Mobile Logo (visible only on mobile) -->
    <a href="/" class="md:hidden absolute left-4 flex items-center space-x-3 hover:opacity-80 transition-opacity duration-200">
      <img src="public/logo.png" alt="Logo" class="w-12 h-12"/>
    </a>

    <!-- Framed Navigation -->
    <nav class="hidden md:flex bg-white rounded-xl shadow-md border border-gray-200 px-8 py-3">
      <div class="flex items-center justify-center space-x-8">
        <!-- Logo Section -->
        <a href="/" class="flex items-center space-x-3 hover:opacity-80 transition-opacity duration-200">
          <img src="public/logo.png" alt="Logo" class="w-12 h-12"/>
        </a>
        <a href="/features" class="text-gray-600 hover:text-gray-800 transition-colors duration-200 font-medium">Features</a>
        <a href="/pricing" class="text-gray-600 hover:text-gray-800 transition-colors duration-200 font-medium">Pricing</a>        
        <a href="/story" class="text-gray-600 hover:text-gray-800 transition-colors duration-200 font-medium">Story</a>
        <a href="/contact" class="text-gray-600 hover:text-gray-800 transition-colors duration-200 font-medium">Contact Us</a>
        <div class="h-6 w-px bg-gray-300"></div>
        <a href="/signin" class="text-gray-600 hover:text-gray-800 transition-colors duration-200 font-medium">Sign in</a>
      </div>
    </nav>

    <!-- Get Started Button -->
    <a href="http://localhost:5173/login" class="hidden md:block btn-primary absolute right-4">
      Get Started
    </a>

    <!-- Mobile menu button -->
    <button class="md:hidden absolute right-4 p-2 rounded-md hover:bg-gray-100 transition-colors duration-200" id="mobile-menu-button" aria-label="Toggle mobile menu">
      <svg class="w-6 h-6 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>
  </div>

  <!-- Mobile menu -->
  <div id="mobile-menu" class="hidden md:hidden">
    <div class="py-6 bg-white/95 backdrop-blur-lg mx-4 mt-2 rounded-lg shadow-md border border-gray-200">
      <div class="flex flex-col space-y-4 px-6">
        <a href="/features" class="text-gray-600 hover:text-blue-600 transition-colors duration-200 font-medium py-2">Features</a>
        <a href="/pricing" class="text-gray-600 hover:text-blue-600 transition-colors duration-200 font-medium py-2">Pricing</a>
        <a href="/story" class="text-gray-600 hover:text-blue-600 transition-colors duration-200 font-medium py-2">Story</a>
        <a href="/contact" class="text-gray-600 hover:text-blue-600 transition-colors duration-200 font-medium py-2">Contact</a>
        <div class="border-t border-gray-200 pt-4">
          <a href="/signin" class="text-gray-600 hover:text-blue-600 transition-colors duration-200 font-medium py-2 block">Sign in</a>
        </div>
        <a href="#contact" class="btn-primary mt-4 w-fit">
          Get Started
        </a>
      </div>
    </div>
  </div>
</header>
